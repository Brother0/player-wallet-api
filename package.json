{
  "name": "player-wallet",
  "version": "1.0.0",
  "description": "Wallet application that stores balances for players and allows bets and wins inside play sessions",
  "author": "Tomaž Bratanič",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc-watch --onSuccess \"npm run postbuild\"",
    "compile-ts-from-json": "node scripts/compile-ts-from-json-schema",
    "init-db": "node scripts/init-db",
    "test": "mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.spec.ts\"",
    "test:db": "mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test-db/database-postgres/*.spec.ts\"",
    "test:watch": "mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.spec.ts\" --watch --watch-files src/**/*,test/**/*",
    "test:coverage": "nyc npm run test",
    "test:report": "nyc report",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "serve": "node dist/app.js",
    "serve:watch": "nodemon dist/app.js",
    "serve:debug": "nodemon --inspect dist/app.js",
    "start": "npm run serve",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TSC,NODEMON,MOCHA\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build:watch\" \"npm run serve:watch\" \"npm run test:watch\"",
    "prebuild": "npm run compile-ts-from-json",
    "postbuild": "copyfiles -u 1 \"src/database-postgres/**/*.sql src/passwords.json\" \"./dist\""
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-basic-auth": "^1.2.1",
    "express-json-validator-middleware": "^3.0.1",
    "express-winston": "^4.2.0",
    "pg": "^8.7.3",
    "pg-promise": "^10.11.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8.4.2",
    "@types/express": "^4.17.13",
    "@types/express-winston": "^4.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.36",
    "@types/pg": "^8.6.5",
    "@types/pg-promise": "^5.4.3",
    "@types/q": "^1.5.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "concurrently": "^7.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "json-schema-to-typescript": "^10.1.5",
    "mocha": "^10.0.0",
    "nock": "^13.2.4",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.0",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  }
}
